{
  "root": true,
  "parser": "@babel/eslint-parser",
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "requireConfigFile": "false",
    "ecmaVersion": 7,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "env": {
    "browser": false,
    "node": true
  },
  "rules": {
    "no-console": "warn",
    "no-multiple-empty-lines": "warn",
    "no-unused-vars": "warn",
    "no-var": "error",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": false,
        "semi": true
      }
    ]
  }
}
